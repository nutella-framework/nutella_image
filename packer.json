{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "vpc_id": "",
    "subnet_id": ""
  },

  "builders": [
    {
      "ssh_host": "127.0.0.1",
      "ssh_port": "2222",
      "ssh_private_key_file": ".vagrant/machines/default/virtualbox/private_key",
      "ssh_username": "ubuntu",
      "type": "null"
    },
    {
      "type":"amazon-ebs",
      "ami_name": "nutella_framework/images/nutella-v0.7.1",
      "instance_type": "t2.micro",
      "region": "us-east-1",
      "source_ami": "ami-fd6e3bea",
      "ssh_username": "ubuntu",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "subnet_id": "{{user `subnet_id`}}"
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/mongodb.service",
      "source": "scripts/mongodb.service",
      "type": "file"
    },
    {
      "script": "scripts/install_nutella.sh",
      "type": "shell"
    }
  ]
}